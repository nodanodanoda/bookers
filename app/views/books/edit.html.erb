<% if @book.errors.any? %>
  <div><p>error</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |index| %>
<h4>Title</h4>
<%= index.text_field :title %>
<h4>Body<h4>
<%= index.text_area :body %>
<p><%= index.submit 'Update Book' %></p>
<% end %>
<%= link_to "show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>