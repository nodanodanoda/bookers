<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
 <% end %>

<h1>Books</h1>
<table>
	<thead>
	    <tr>
		  <th>Title</th><th>Body</th><th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
    <% @index.each do |index| %>
	    <tr>
	    	<td class="title"><%= index.title %></td>
            <td class="body"><%= index.body %></td>
            <td class="link"><%= link_to "Show", book_path(index.id) %></td>
            <td class="link"><%= link_to "Edit", edit_book_path(index.id) %></td>
            <td class="link"><%=link_to 'Destroy', book_path(index.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
	    </tr>
	<% end %>
    </tbody>

</table>

<% if @book.errors.any? %>
  <div><p>error</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>New book</h1>
 
 <%= form_for(@book, url: '/books') do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <p><%= f.submit 'Create Book' %></p>
  <% end %>